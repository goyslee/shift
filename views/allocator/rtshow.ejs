<% include ../partials/header %>
<% include ../partials/header2 %>
<div class="container">
	<div class="row">
		<div class="col-md-4 col-sm-12 col-xs-12 "></div>
		<div class="col-md-4 col-sm-12 col-xs-12 ">
			<p><a href="/allocator/allocations/allocationshow/<%= allocatorinfo._id %>"><%= allocatorinfo.name %></p>
			<form action="/allocator/<%= allocatorinfo.id %>/rtshow" method="POST" id="positionForm">
				<div class="form-group">
					<label>Add Scissor lift driver</label>
					<select class="form-control" name="rt">
						<% foundColleague.forEach(function(colleague){ %>
						<% if (colleague.isIn == true && colleague.rt == true && colleague.isAllocated == false && allocatorinfo.shift === colleague.shift) { %>
						<option  value="<%= colleague.fullName %>"><%= colleague.fullName %></option>
						<% } else { %>
						<p>There are no more Scissor lift driver avaiable for <%= allocatorinfo.name %></p>
						<% } %>
						<% }); %>
					</select>
					<hr>
					<button class="btn btn-danger btn-block blackgold ">Add Scissor lift driver</button>
				</div>
			</form>
			<table class="table-responsive">
				<thead>
					<tr><th>Scissor lift drivers:</th></tr>
				</thead>
				<tbody>
					<% var checkNum = 1; %>
					<% foundColleague.forEach(function(foundColleague){ %>
					<% foundRt.forEach(function(foundRt){ %>
					<% if (foundRt.author.id.equals(allocatorinfo.id) && foundRt.colleagueId === foundColleague.id) { %>
					<% checkNum++ %>
					<tr><td><a href="/colleagues/<%= foundColleague.id %>" title=""><%= foundColleague.fullName %></a></td><td><form action="/allocator/<%= allocatorinfo.id  %>/rtshow/<%= foundRt.id %>?_method=DELETE" method="POST"><button class="btn btn-primary btn-sm blackgold">Remove</button></form></td></tr>
					<% } %>
					<% }); %>
					<% }); %>
					<% if (checkNum < 2) { -%>
					<tr><td>No scissor lift driver assigned</td></tr>
					<% } %>
				</tbody>
			</table>
		</div>
		<!-- <div class="col-sm6 col-md-4 col-md-offset-4 col-sm-offset-3">
		</div> -->
		<div class="col-md-4 col-sm-12 col-xs-12 "></div>
	</div>
</div>
<% include ../partials/footer %>