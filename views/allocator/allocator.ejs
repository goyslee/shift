<% include ../partials/header %>
<% include ../partials/header2 %>
<div class="container">
    <h4 class="">Shift set up 1st Step (Type in the shift targets)</h4>
    <hr class="style-four">
    <h1>TARGETS</h1>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form action="/allocator" method="POST">
                <div class="form-group">
                    <button class="btn btn-danger btn-block blackgold ">Create Blank Deployment Sheet</button>
                    <br>
                    <!-- <a class="btn btn-warning btn-block goldblack" href="/">Back</a> -->
                </div>
                <div class="form-group">
                    <label>Shift Date</label>
                    <input class="form-control myinput" type="date" name="allocator[time]" placeholder="Shift Date" required="required">
                </div>
                <div class="form-group">
                    <label>Position (Select fom dropdown)</label>
                    <select class="form-control myinput" name="allocator[shift]">
                        <option value="Earlies">Earlies</option>
                        <option value="Middles">Middles</option>
                        <option value="Nights">Nights</option>
                        <!-- <option value="Quad">Quad</option>
                        <option value="Step Up">Step Up</option> -->
                    </select>
                </div>
                <label for="">Number of Receivers</label>
                <div class="form-group">
                    <input class="form-control" type="text" name="allocator[tipMen]" placeholder="Recievers">
                </div>
                <label for="">Number of Loaders</label>
                <div class="form-group">
                    <input class="form-control" type="text" name="allocator[loaderNeed]" placeholder="Loaders">
                </div>
                <label for="">Number of Reach truck drivers</label>
                <div class="form-group">
                    <input class="form-control" type="text" name="allocator[truckDriver]" placeholder="Drivers">
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>