<% include ../partials/header %>
<% include ../partials/header2 %>
<div class="container">
	<div class="row">
		<div class="col-md-4 col-sm-12 col-xs-12 "></div>
		<div class="col-md-4 col-sm-12 col-xs-12 ">
			<p><a href="/allocator/allocations/allocationshow/<%= allocatorinfo._id %>"><%= allocatorinfo.name %></a></p>
			<form action="/allocator/<%= allocatorinfo.id %>/recoupshow" method="POST"  id="positionForm">
				<div class="form-group">
					<label>Add Checking colleague</label>
					<select class="form-control" name="manualpick">
						<% foundColleague.forEach(function(colleague){ %>
						<% if (colleague.isIn == true && colleague.recoup == true && colleague.isAllocated == false && allocatorinfo.shift === colleague.shift) { %>
						<option  value="<%= colleague.fullName %>"><%= colleague.fullName %></option>
						<% } else { %>
						<p>There are no more checking colleague avaiable for <%= allocatorinfo.name %></p>
						<% } %>
						<% }); %>
					</select>
					<hr>
					<button class="btn btn-danger btn-block blackgold ">Add checking colleague</button>
				</div>
			</form>
			<table class="table-responsive">
				<thead>
					<tr><th>Checking:</th></tr>
				</thead>
				<tbody>
					<% var checkNum = 1; %>
					<% foundColleague.forEach(function(foundColleague){ %>
					<% foundRecoup.forEach(function(foundRecoup){ %>
					<% if (foundRecoup.author.id.equals(allocatorinfo.id) && foundRecoup.colleagueId === foundColleague.id) { %>
					<% checkNum++ %>
					<tr><td><a href="/colleagues/<%= foundColleague.id %>" title=""><%= foundColleague.fullName %></a></td><td><form action="/allocator/<%= allocatorinfo.id  %>/recoupshow/<%= foundRecoup.id %>?_method=DELETE" method="POST"><button class="btn btn-primary btn-sm blackgold">Remove</button></form></td></tr>
					<% } %>
					<% }); %>
					<% }); %>
					<% if (checkNum < 2) { -%>
					<tr><td>Nobody is assinged to Checking</td></tr>
					<% } %>
				</tbody>
			</table>
		</div>
		<!-- <div class="col-sm6 col-md-4 col-md-offset-4 col-sm-offset-3">
		</div> -->
		<div class="col-md-4 col-sm-12 col-xs-12 "></div>
	</div>
</div>
<% include ../partials/footer %>