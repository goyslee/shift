<%/*v15*/%>     </form>
Please search by Surname!
<%/*v15*/%> </p>
        </div> <%/*v15*/%>

    </div>
</div>  
<div class="container">
  <div class="table-responsive">
    <table class="table">
        <thead>
            <tr><th>In Work</th><th>Name</th><th>Organization</th><th>Skills</th><th>Team</th></tr>
        </thead>
         <tbody>
        <% tablerow.forEach(function(tablerow){ %> <!--id 1-->
        <% if (tablerow.isIn = true) { %>
           <tr>    
                <td>
                    <form action="/allocations/<%= tablerow._id %>?_method=PUT" method="POST">
                        <div class="" style="width: 30%; margin: 55px auto;">
                            <div class="">
                                <input type="submit" name="colleague[isIn]" value="book" class="btn btn-danger btn-block blackgold">
                            </div>
                        </div>
                    </form> 
                </td>
                <td class="szlink">
                    <div id="<%= tablerow.firstName + " " + tablerow.lastName %>">
                        <a href="/colleagues/<%= tablerow._id %>" title="<%= tablerow.colleagueinfo %>"><%= tablerow.firstName + " " + tablerow.lastName %></a>
                    </div>
                </td>
                <td>
                   <%= tablerow.organization %> 
                </td>
                <td class="uppercase">
                    <% for(var prop in tablerow){ %>
                            <%if(tablerow[prop] === true){ %>
                            <span class="smallfont"><%= prop + " | " %></span>
                            <%}%>
                            <%}%>
                            
                </td>
                <td>
                    <%= tablerow.team %>
                </td>
               <% }; %>
            <% }); %>
            </tr>
        </tbody>
       </table>
       </div>
       </div>
       

  
</div>
</div>






